+
+// Browser layout types
+enum class HeliumLayoutType {
+  kHorizontal = 0,  // Traditional horizontal tab strip
+  kToolbar = 1,     // Compact layout with tabs in the toolbar
+  kVertical = 2,    // Vertical tab strip on the side
+};
+
+class HeliumLayoutStateController {
+ public:
+  DECLARE_USER_DATA(HeliumLayoutStateController);
+
