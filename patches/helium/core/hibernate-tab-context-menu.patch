+using DiscardEligibilityPolicy =
+    performance_manager::policies::DiscardEligibilityPolicy;
+using CanDiscardResult = performance_manager::policies::CanDiscardResult;
+
+DiscardEligibilityPolicy* GetDiscardEligibilityPolicy() {
+  if (!performance_manager::PerformanceManager::IsAvailable()) {
+    return nullptr;
+  }
+  return DiscardEligibilityPolicy::GetFromGraph(
+      performance_manager::PerformanceManager::GetGraph());
+}
+
+base::WeakPtr<performance_manager::PageNode> GetDiscardCandidatePageNode(
+    const TabStripModel* tab_strip_model,
+    int index,
+    DiscardEligibilityPolicy* eligibility_policy) {
+  CHECK(eligibility_policy);
+
+  // The active tab can't be discarded.
+  if (index == tab_strip_model->active_index()) {
+    return nullptr;
+  }
+
+  WebContents* const contents = tab_strip_model->GetWebContentsAt(index);
+  if (!contents || contents->WasDiscarded()) {
+    return nullptr;
+  }
+
+  base::WeakPtr<performance_manager::PageNode> page_node =
+      performance_manager::PerformanceManager::
+        GetPrimaryPageNodeForWebContents(contents);
+
+  if (!page_node) {
+    return nullptr;
+  }
+
+  CanDiscardResult can_discard_result = eligibility_policy->CanDiscard(
+      page_node.get(), ::mojom::LifecycleUnitDiscardReason::PROACTIVE,
+      base::TimeDelta());
+
+  if (can_discard_result != CanDiscardResult::kEligible) {
+    return nullptr;
+  }
+
+  return page_node;
+}
